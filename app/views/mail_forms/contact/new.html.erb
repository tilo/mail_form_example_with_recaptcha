<h1>Contact Us</h1>

<%= form_for(@contact , :url => contact_path  ) do |f| %>
  <% if @contact.errors.any? %>
  <div id="errorExplanation">
    <h2>Ooops, something went wrong:</h2>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name , :tabindex => '1' %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name , :tabindex => '2' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email , :tabindex => '3' %>
  </div>

  <div class="field">
    <%= f.label :organization %><br />
    <%= f.text_field :organization , :tabindex => '4' %>
  </div>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject , :tabindex => '5' %>
  </div>

  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message , :tabindex => '6' %>
  </div>

  <div class="field">
    <%= f.label 'How did you hear about us?' %><br />
    <%= f.select(:how, MailForms::Contact::HowA , {:index => nil, :prompt => "Choose one.."} ) %>
    <!--    <%= f.text_field :how , :tabindex => '7' %> -->
  </div>

  <div class="recaptcha">
    <%= f.label :recaptcha , 'Please Type the Two Words:'  %><br />
    <%= recaptcha_tags :display => {:theme => 'clean' , :tabindex => '8' } %>
  </div>

  <div class="actions">
    <%= f.submit "Send Message" %>
  </div>
<% end %>

